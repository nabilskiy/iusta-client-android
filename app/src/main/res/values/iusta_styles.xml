<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">53dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Accent" parent="Button">
        <item name="android:background">@drawable/btn_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.LighterGrey" parent="Button">
        <item name="android:background">@drawable/btn_lighter_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/input_layout_default</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="hintTextColor">@color/grey</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="TextView.Title.Big" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="TextView.Title.Small" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="TextView.Dialog" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>



</resources>